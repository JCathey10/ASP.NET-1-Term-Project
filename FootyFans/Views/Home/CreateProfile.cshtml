@model FootyFans.Models.User
@{
    Layout = "_Layout";
    // Sending the Title back to the Layout
    ViewBag.Title = "Create a Profile";
}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Footy Fans</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="News">Recent News</a></li>
            <li><a asp-controller="Home" asp-action="Footage">Footage</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="CreateProfile">Create a Profile</a></li>
        </ul>
    </div>
</nav>

<div class="panel-heading text-center">
    <h1 style="color:green">Create a Profile!</h1><br />
</div>
<div id="wrapper">
    <div class="panel panel-success">
        <div class="panel-body">
            <form class="p-a-1" asp-controller="Home" asp-action="CreateProfile" method="post">
                <div asp-validation-summary="All">
                    <div class="form-group">
                        <label asp-for="Name">User Name:</label>
                        <input class="form-control" asp-for="Name" placeholder="Leo Messi" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FavoriteTeam">Who's Your Favorite Team?</label>
                        <input class="form-control" asp-for="FavoriteTeam" placeholder="FC Barcelona" />
                    </div>
                    <div class="form-group">
                        <label asp-for="About">Tell us About Yourself:</label>
                        <textarea class="form-control" asp-for="About" 
                            placeholder="What would you like other users to know about yourself?">
                        </textarea><br />
                        <button class="btn btn-primary" type="submit">
                            Submit
                        </button>
                        <button class="btn btn-secondary" type="reset">
                            Reset the Form
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
